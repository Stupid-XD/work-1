#include <iostream>
using namespace std;

int main() {
	//int
	int a_1 = 10;
	cout << "a_1 = " << a_1 << " | тип: int, размер: 4 б." << endl;
	int a_2 = -5;
	cout << "a_2 = " << a_2 << " | тип: int, размер: 4 б." << endl;
	int a_3 = 0;
	cout << "a_3 = " << a_3 << " | тип: int, размер: 4 б." << endl;
	int a_4 = 100;
	cout << "a_4 = " << a_4 << " | тип: int, размер: 4 б." << endl;
	int a_5 = -25;
	cout << "a_5 = " << a_5 << " | тип: int, размер: 4 б." << endl;

	//short
	short s_1 = 1;
	cout << "s_1 = " << s_1 << " | тип: short, размер: 2 б." << endl;
	short s_2 = -10;
	cout << "s_2 = " << a_2 << " | тип: short, размер: 2 б." << endl;
	short s_3 = 50;
	cout << "s_3 = " << s_3 << " | тип: short, размер: 2 б." << endl;
	short s_4 = -100;
	cout << "s_4 = " << s_4 << " | тип: short, размер: 2 б." << endl;
	short s_5 = 25;
	cout << "s_5 = " << s_5 << " | тип: short, размер: 2 б." << endl;

	//float
	float f_1 = 3.14f;
	cout << "f_1 = " << f_1 << " | тип: short, размер: 4 б." << endl;
	float f_2 = -2.5f;
	cout << "f_2 = " << f_2 << " | тип: short, размер: 4 б." << endl;
	float f_3 = 0.0f;
	cout << "f_3 = " << f_3 << " | тип: short, размер: 4 б." << endl;
	float f_4 = 100.45f;
	cout << "f_4 = " << f_4 << " | тип: short, размер: 4 б." << endl;
	float f_5 = -45.9f;
	cout << "f_5 = " << f_5 << " | тип: short, размер: 4 б." << endl;

	//double
	double d_1 = 3.141;
	cout << "d_1 = " << d_1 << " | тип: short, размер: 8 б." << endl;
	double d_2 = -2.715;
	cout << "d_2 = " << d_2 << " | тип: short, размер: 8 б." << endl;
	double d_3 =0.0;
	cout << "d_3 = " << d_3 << " | тип: short, размер: 8 б." << endl;
	double d_4 = 123.456;
	cout << "d_4 = " << d_4 << " | тип: short, размер: 8 б." << endl;
	double d_5 = 45.69;
	cout << "d_5 = " << d_5 << " | тип: short, размер: 8 б." << endl;

//char
	char c_1 = 'A';
	cout << "c_1 = " << c_1 << " | тип: short, размер: 1 б." << endl;
	char c_2 = 'b';
	cout << "c_2 = " << c_2 << " | тип: short, размер: 1 б." << endl;
	char c_3 = '5';
	cout << "c_3 = " << c_3 << " | тип: short, размер: 1 б." << endl;
	char c_4 = '@';
	cout << "c_4 = " << c_4 << " | тип: short, размер: 1 б." << endl;
	char c_5 = ' ';
	cout << "c_5 = " << c_5 << " | тип: short, размер: 1 б." << endl;

//bool

	bool b_1 = true;
	cout << "b_1 = " << b_1 << " | тип: short, размер: 1 б." << endl;
	bool b_2 = false;
	cout << "b_2 = " << b_2 << " | тип: short, размер: 1 б." << endl;
	bool b_3 = true;
	cout << "b_3 = " << b_3 << " | тип: short, размер: 1 б." << endl;
	bool b_4 = false;
	cout << "b_4 = " << b_4 << " | тип: short, размер: 1 б." << endl;
	bool b_5 = true;
	cout << "b_5 = " << b_5 << " | тип: short, размер: 1 б." << endl;
}
