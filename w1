#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	int num;
	int sum = 0;
	std::cout << "введите число: ";
	std::cin >> num;
	while (num != 0) {
		sum += num;

		std::cout << "введите число: ";
		std::cin >> num;
	}

	std::cout << "Сумма: " << sum << std::endl;

	return 0;
	int _; cin >> _;
}
