#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	int number;
	cout << "Месяц года:" << endl << "[1] Январь" << endl << "[2] Февраль" << endl << "[3] Март" << endl << "[4] Апрель" << endl << "[5] Май" << endl << "[6] Июнь" << endl;
	cout << "[7] Июль" << endl << "[8] Август" << endl << "[9] Сентябрь" << endl << "[10] Октябрь" << endl << "[11] Ноябрь" << endl << "[12] Декабрь" << endl;

	cin >> number;

	switch (number) {
	case 1: cout << "Выбран месяц: Январь" << endl;
		break;
	case 2: cout << "Выбран месяц: Февраль" << endl;
		break;
	case 3: cout << "Выбран месяц: Март" << endl;
		break;
	case 4: cout << "Выбран месяц: Апрель" << endl;
		break;
	case 5: cout << "Выбран месяц: Май" << endl;
		break;
	case 6: cout << "Выбран месяц: Июнь" << endl;
		break;
	case 7: cout << "Выбран месяц: Июль" << endl;
		break;
	case 8: cout << "Выбран месяц: Август" << endl;
		break;
	case 9: cout << "Выбран месяц: Сентябрь" << endl;
		break;
	case 10: cout << "Выбран месяц: Октябрь" << endl;
		break;
	case 11: cout << "Выбран месяц: Ноябррь" << endl;
		break;
	case 12: cout << "Выбран месяц: Декабрь" << endl;
		break;
	default: cout << "Неверный номер месяца!" << endl;
	}


}
