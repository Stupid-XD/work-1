#include <iostream>
using namespace std;

int main() {
	int choice;

	cout << "[-] Программа \"Время года\"" << endl;
	cout << endl;
	cout << "[1] Лето" << endl;
	cout << "[2] Осень" << endl;
	cout << "[3] Зима" << endl;
	cout << "[4] Весна" << endl;
	cout << endl;
	cout << "[-] Введите значение: ";
	cin >> choice;

	if (choice == 1) {
		cout << "[-] Сейчас лето, можно одеться легко и одеть очки.";
	}
	else if (choice == 2) {
		cout << "[-] Сейчас осень, следует одеться тепло и взять с собой зонт.";
	}
	else if (choice == 3) {
		cout << "[-] Сейчас зима, следует одеться очень тепло и не забыть шапку.";
	}
	else if (choice == 4) {
		cout << "[-] Сейчас весна, можно деться легко, но следует взять куртку.";
	}
	else {
		cout << "[-] Ошибка! Ведите число от 1 до 4";
	}

	return 0;
}
