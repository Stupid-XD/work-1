#include <iostream>
#include <ctime>
using namespace std;

int main() {
	int number;

	while (true) {
		cout << "[ ] Цикл \WHILE\"" << endl;
		cout << "[ ] Введите число: ";
		cin >> number;

		if (number == 0) {
			cout << "Выход из программы." << endl;
			break;
		}
		if (number < 1 || number > 15) {
			cout << "[ ] Ошибка: число должно быть от 1 до 15" << endl;
			continue;
		}

		int i = 1;
		while (i <= number) {
			cout << "[ ] Цикл отработал. Круг: " << i << "." << endl;
			i++;
		}
		cout << endl;
	
	
	
	}
	return 0;
}
