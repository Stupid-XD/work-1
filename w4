#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");

	int number;

	cout << "[ + ] Введите число:";
		cin >> number;

	if (number <= 0) {
		cout << "[ ! ] Ошибка: число должно быть положительным" << endl;
		return 1;
	}

	int count = 0;
	int temp = number;

	while (temp > 0) {
		temp = temp / 10;
		count++;
	}

	cout << "[ + ] Кол-во цифр:" << count << endl;

	return 0;
