#include <iostream>
#include <string>
#include <algorithm>

using namespace std;

int main() {
    setlocale(0, "");
    int choice;
    int type;
    int width, heighrt;
    int size;
    char texture;

    cout << "[+] Программа - “Геометрические фигуры”" << endl;
    cout << "[1] Линия" << endl;
    cout << "[2] квадрат" << endl;
    cout << "[3] прямоугольник" << endl;
    cout << "[4] крестик" << endl;
    cout << "[+] выберите фигуру: ";
    cin >> choice;

#ifdef _WIN32
    system("cls");
#else
    system("clear");
#endif

    if (choice != 4) {
        cout << "в данной ревлизации только крестик" << endl;
        return 0;
    }
    cout << "[+] Программа - “Геометрические фигуры”" << endl;
    cout << "[1] заполненый" << endl;
    cout << "[2] пустой" << endl;
    cout << "[+] выберите номер: ";
    cin >> type;

    cout << "[+] размер: ";
    cin >> size;
    cout << "[+] текстура: ";
    cin >> texture;

    cin.ignore(numeric_limits <streamsize>::max(), '\n');

    cout << endl << "[+] результат: " << endl << endl;


    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            if (j == i || j == size - 1 - i) {
                cout << texture;
            }
            else {
                cout << ".";
            }

            if (j < size - 1) {
                cout << " ";
            }

        }
        cout << endl;
    }
    cout << endl << "нажмите Enter для выхода";
    cin.get();

    return 0;

}
