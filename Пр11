#include <iostream>
#include <cstdlib>
using namespace std;

int main()	{
	setlocale(0, "");
	int num;
	int count;
	int scale;
	int variant;
	char texture;
	int i = 0;
	int b = 0;
	cout << "Программа - Геометрические фигуры" << endl << "[1]Линия" << endl << "[2]Квадрат" << endl;
	cout << "Выберите фигуру: " << endl;
	cin >> num;
	if (num < 1 or num > 2) {
		cout << "Такой фигуры нет!" << endl;
		return 0;
	}
	if (num == 1) {
		cout << "Фигура: Линия" << endl << "[1]Горизонтальная" << endl << "[2]Вертикальная" << endl;
		cin >> variant;
		if (variant < 1 or variant > 2) {
			cout << "Неверный выбор линии!" << endl;
			return 0;
		}
		if (variant == 1) {
			cout << "Введите длину линии: " << endl;
			cin >> scale;
			if (scale <= 0) {
				cout << "Невозможная длина линии!" << endl;
				return 0;
			}
			cout << "Введите текстуру линии: " << endl;
			cin >> texture;
			system("cls");
			while (i < scale) {
				cout << texture << " ";
				i++;
			}
			return 0;
		} 
		if (variant == 2) {
			cout << "Введите длину линии: " << endl;
			cin >> scale;
			if (scale <= 0) {
				cout << "Невозможная длина линии!" << endl;
				return 0;
			}
			cout << "Введите текстуру линии: " << endl;
			cin >> texture;
			system("cls");
			while (i < scale) {
				cout << texture << endl;
				i++;
			}
			return 0;
		}
	}
	if (num == 2) {
		cout << "Введите длину стороны квадрата: " << endl;
		cin >> scale;
		if (scale <= 0) {
			cout << "Невозможная длина квадрата!" << endl;
			return 0;
		}
		cout << "Введите текстуру квадрата: " << endl;
		cin >> texture;
		system("cls");
		while (i < scale) {
			while (b < scale) {
				cout << texture << " ";
				b++;

			}
			b = 0;
			cout << endl;
			i++;
		}
		return 0;
	}

}
