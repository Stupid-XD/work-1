#include <iostream>
#include <string>
#include <algorithm>

using namespace std;

int main() {
    setlocale(0, "");
    int choice;
    int type;
    int width, heighrt;
    char texture;

    cout << "[+] Программа - “Геометрические фигуры”" << endl;
    cout << "[1] Линия" << endl;
    cout << "[2] квадрат" << endl;
    cout << "[3] прямоугольник" << endl;
    cout << "[+] выберите фигуру: ";
    cin >> choice;

#ifdef _WIN32
    system("cls");
#else
    system("clear");   
#endif

    if (choice != 3) {
        cout << "в данной ревлизации только прямоугольник" << endl;
        return 0;
}
    cout << "[+] Программа - “Геометрические фигуры”" << endl;
    cout << "[1] заполненый" << endl;
    cout << "[2] пустой" << endl;
    cout << "[+] выберите номер: ";
    cin >> type;

    cout << "[+] ширина: ";
    cin >> width;
    cout << "[+] высота: ";
    cin >> heighrt;
    cout << "[+] текстура: ";
    cin >> texture;

    cin.ignore(numeric_limits <streamsize>::max(), '\n');

    cout << endl << "[+] результат: " << endl << endl;

    if (type == 1) {
        for (int i = 0; i < heighrt; i++) {
            for (int j = 0; j < width; j++) {
                cout << texture;
            }
            cout << endl;
        }
    }
    else if (type == 2) {

        for (int i = 0; i < heighrt; i++) {
            for (int j = 0; j < width; i++){
                cout << texture;
            }
            cout << endl;
        }
    }
    else
    {
        cout << "неверный тип прямоугольник" << endl;
    }
    cout << endl << "нажмите Enter для выхода";
    cin.get();

    return 0;




}
